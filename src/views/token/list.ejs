<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
        <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
</head>
<body>
    <div class="container">
        <%- include("../layout/Navbar.ejs") %>
        <div class="card mt-2">
            <div class="card-header">
                <h5 class="card-title">Api keys</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-12 col-md-8">
                        <table class="table">
                            <tr>
                                <td>Key</td>
                                <td>Name</td>
                                <td>Status</td>
                                <td>Actions</td>
                            </tr>
                            <% tokens.forEach((apiKey, index) => { %> 
                                <tr>
                                    <td><%= apiKey.key %></td>
                                    <td><%= apiKey.name %></td>
                                    <td id="status-<%= apiKey.id %>"><%= apiKey.status %></td>
                                    <td>
                                        <form action="/api-keys/update-status" method="post" class="d-inline">
                                            <input type="hidden" name="id" value="<%= apiKey.id %>">
                                            <input type="hidden" name="newStatus" value="<%= apiKey.status === 'active' ? 'disabled' : 'active' %>">
                                            <button type="submit" class="btn btn-sm btn-info">
                                                <i class="material-icons">toggle_on</i>
                                            </button>
                                        </form>
                                        <button type="button" class="btn btn-sm btn-warning" data-bs-toggle="modal" data-bs-target="#editModal" data-id="<%= apiKey.id %>" data-name="<%= apiKey.name %>">
                                            <i class="material-icons">edit</i>
                                        </button>
                                        <a href="/api-keys/<%= apiKey.id %>/delete" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this API key?')">
                                            <i class="material-icons">delete</i>
                                        </a>
                                    </td>
                                </tr>
                            <% }); %>
                        </table>
                    </div>
                    <div class="col-12 col-md-4">
                        <form action="/api-keys/store" method="post">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <td colspan="2">Create key</td>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td>
                                            <input class="form-control" name="keyName" type="text" placeholder="api key name">
                                        </td>
                                        <td>
                                            <button type="submit" class="btn btn-primary">Create</button>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <!-- Edit Modal -->
        <div class="modal fade" id="editModal" tabindex="-1" aria-labelledby="editModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="editModalLabel">Edit API Key Name</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <form id="editForm" action="/api-keys/update-name" method="post">
                            <input type="hidden" name="id" id="editId">
                            <div class="mb-3">
                                <label for="newName" class="form-label">New Name</label>
                                <input type="text" class="form-control" id="newName" name="newName" required>
                            </div>
                            <button type="submit" class="btn btn-primary">Save changes</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
            crossorigin="anonymous"></script>
        <script>
            var editModal = document.getElementById('editModal');
            editModal.addEventListener('show.bs.modal', function (event) {
                var button = event.relatedTarget;
                var id = button.getAttribute('data-id');
                var name = button.getAttribute('data-name');
                var modalTitle = editModal.querySelector('.modal-title');
                var editId = editModal.querySelector('#editId');
                var newName = editModal.querySelector('#newName');

                modalTitle.textContent = 'Edit API Key Name';
                editId.value = id;
                newName.value = name;
            });
        </script>
    </div>
</body>
</html>