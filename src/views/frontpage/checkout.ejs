    <!-- Checkout Section Begin -->
    <section class="checkout spad">
        <div class="container">
            <div class="row">
            </div>
            <div class="checkout__form">
                <h4>Thông tin thanh toán</h4>
                <form id="checkout-form" action="/checkout" method="POST">
                    <div class="row">
                        <div class="col-lg-8 col-md-6">
                            <div class="row">
                                <div class="col-lg-6">
                                    <div class="checkout__input">
                                        <p>Tên<span>*</span></p>
                                        <input type="text" name="firstName" id="firstName" required>
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="checkout__input">
                                        <p>Họ<span>*</span></p>
                                        <input type="text" name="lastName" id="lastName" required>
                                    </div>
                                </div>
                            </div>
                            <div class="checkout__input">
                                <p>Quốc gia<span>*</span></p>
                                <input type="text" name="country" id="country" required>
                            </div>
                            <div class="checkout__input">
                                <p>Địa chỉ<span>*</span></p>
                                <input type="text" name="address" id="address" placeholder="Địa chỉ nhà" required>
                            </div>
                            <div class="checkout__input">
                                <p>Thành phố/Thị xã<span>*</span></p>
                                <input type="text" name="city" id="city" required>
                            </div>
                            <div class="checkout__input">
                                <p>Mã bưu điện<span>*</span></p>
                                <input type="text" name="zip" id="zip" required>
                            </div>
                            <div class="row">
                                <div class="col-lg-6">
                                    <div class="checkout__input">
                                        <p>Số điện thoại<span>*</span></p>
                                        <input type="text" name="phone" id="phone" required>
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="checkout__input">
                                        <p>Email<span>*</span></p>
                                        <input type="email" name="email" id="email" required>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-4 col-md-6">
                            <div class="checkout__order">
                                <h4>Đơn hàng của bạn</h4>
                                <div class="checkout__order__products">Sản phẩm <span>Tổng cộng</span></div>
                                <ul id="order-summary">
                                    <% shopingCart.forEach(product => { %>
                                        <li><%= product.name %> <span>$<%= (product.price * product.quantity).toFixed(2) %></span></li>
                                    <% }) %>
                                </ul>
                                <div class="checkout__order__total" id="order-summary" data-total="<%= total %>">
                                    Tổng cộng <span>$<%= total.toFixed(2) %></span>
                                </div>
                                <div class="checkout__input__checkbox">
                                    <label for="paypal">
                                        Thanh toán tiền mặt
                                        <input type="radio" id="paypal" name="paymentMethod" value="cash">
                                        <span class="checkmark"></span>
                                    </label>
                                </div>
                                <!-- <div class="checkout__input__checkbox">
                                    <label for="online-payment">
                                        Thanh toán trực tuyến (PayPal)
                                        <input type="radio" id="online-payment" name="paymentMethod" value="paypal">
                                        <span class="checkmark"></span>
                                    </label>
                                </div> -->
                                <div class="checkout__input__checkbox">
                                    <label for="vnpay-payment">
                                        Thanh toán VNPay
                                        <input type="radio" id="vnpay-payment" name="paymentMethod" value="vnpay">
                                        <span class="checkmark"></span>
                                    </label>
                                </div>
                                <button type="submit" class="site-btn">ĐẶT HÀNG</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </section>
    <!-- Checkout Section End -->

    <!-- Footer Section Begin -->
    <%- include('../layout/footer_f') %>
    <!-- Footer Section End -->

