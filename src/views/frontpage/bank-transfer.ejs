    <!-- Humberger End -->

    <!-- Header Section Begin -->
    <%- include('../layout/header') %>
    <!-- Header Section End -->

    <!-- Hero Section Begin -->
    <section class="hero hero-normal">
        <div class="container">
            <div class="row">
                <div class="col-lg-3">
                    <%- include('../layout/hero_cate') %>
                </div>
                <div class="col-lg-9">
                    <%- include('../layout/search') %>
