<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Quản lý Đánh giá</title>
    <link rel="stylesheet" href="/css/bootstrap.min.css" type="text/css">
    <link rel="stylesheet" href="/css/font-awesome.min.css" type="text/css">
    <style>
        body {
            padding-top: 20px;
        }
        .container {
            max-width: 1200px;
        }
        .table th, .table td {
            vertical-align: middle;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1 class="mb-4">Quản lý Đánh giá Sản phẩm</h1>

        <table class="table table-bordered table-hover">
            <thead class="thead-dark">
                <tr>
                    <th>ID</th>
                    <th>Sản phẩm</th>
                    <th>Người đánh giá</th>
                    <th>Rating</th>
                    <th>Bình luận</th>
                    <th>Ngày tạo</th>
                    <th>Hành động</th>
                </tr>
            </thead>
            <tbody>
                <% if (reviews && reviews.length > 0) { %>
                    <% reviews.forEach(review => { %>
                        <tr>
                            <td><%= review.id %></td>
                            <td><a href="/shop-details/<%= review.product.id %>" target="_blank"><%= review.product.name %></a></td>
                            <td><%= review.user.email %></td>
                            <td>
                                <% for(let i = 0; i < review.rating; i++) { %>
                                    <i class="fa fa-star text-warning"></i>
                                <% } %>
                                <% for(let i = 0; i < (5 - review.rating); i++) { %>
                                    <i class="fa fa-star-o text-secondary"></i>
                                <% } %>
                            </td>
                            <td>
                                <p><%= review.comment || 'Không có bình luận' %></p>
                                <% if (review.adminReply) { %>
                                    <div class="alert alert-secondary mt-2">
                                        <strong>Phản hồi của Admin:</strong>
                                        <p class="mb-0"><%= review.adminReply %></p>
                                        <small class="text-muted"><%= new Date(review.adminReplyAt).toLocaleDateString('vi-VN') %></small>
                                    </div>
                                <% } %>
                            </td>
                            <td><%= new Date(review.createdAt).toLocaleDateString('vi-VN') %></td>
                            <td>
                                <form action="/admin/reviews/<%= review.id %>/reply" method="POST">
                                    <textarea name="reply" class="form-control mb-2" rows="2" placeholder="Viết phản hồi..."><%= review.adminReply || '' %></textarea>
                                    <button type="submit" class="btn btn-primary btn-sm">Gửi</button>
                                </form>
                            </td>
                        </tr>
                    <% }) %>
                <% } else { %>
                    <tr>
                        <td colspan="7" class="text-center">Chưa có đánh giá nào.</td>
                    </tr>
                <% } %>
            </tbody>
        </table>
    </div>

    <script src="/js/jquery-3.3.1.min.js"></script>
    <script src="/js/bootstrap.min.js"></script>
</body>
</html>