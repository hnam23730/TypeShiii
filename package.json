{
  "name": "app-typescript",
  "version": "1.0.0",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc --project tsconfig.json && tsc-alias -p tsconfig.json && cpx \"src/views/**/*.ejs\" dist/views",
    "start": "node dist/index.js",
    "dev": "nodemon -r tsconfig-paths/register src/index.ts",
    "test": "echo \"Error: no test specified\" && exit 1",
    "typeorm": "node -r ts-node/register -r tsconfig-paths/register ./node_modules/typeorm/cli.js",
    "migration:generate": "npm run typeorm -- -d src/database/data-source.ts migration:generate",
    "migration:run": "npm run typeorm -- -d src/database/data-source.ts migration:run",
    "migration:revert": "npm run typeorm -- -d src/database/data-source.ts migration:revert",
    "db:migrate:prod": "netlify dev:exec -- npm run migration:run",
    "db:revert:prod": "netlify dev:exec -- npm run migration:revert"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "@netlify/neon": "^0.1.0",
    "@paypal/checkout-server-sdk": "^1.0.3",
    "@types/body-parser": "^1.19.5",
    "@types/connect-flash": "^0.0.40",
    "@types/cookie-parser": "^1.4.8",
    "@types/cors": "^2.8.17",
    "@types/express-session": "^1.18.1",
    "axios": "^1.7.9",
    "body-parser": "^1.20.3",
    "connect-typeorm": "^2.0.0",
    "cors": "^2.8.5",
    "connect-flash": "^0.1.1",
    "crypto": "^1.0.1",
    "date-fns": "^4.1.0",
    "dotenv": "^16.4.7",
    "ejs": "^3.1.10",
    "esm": "^3.2.25",
    "exceljs": "^4.4.0",
    "express": "^4.21.2",
    "express-async-handler": "^1.2.0",
    "express-session": "^1.18.1",
    "multer": "^1.4.5-lts.2",
    "node-fetch": "^2.7.0",
    "nodemailer": "^6.10.0",
    "openai": "^4.91.1",
    "passport": "^0.7.0",
    "passport-google-oauth20": "^2.0.0",
    "pg": "^8.12.0",
    "reflect-metadata": "^0.2.2",
